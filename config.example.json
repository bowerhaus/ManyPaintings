{
  "flask": {
    "secret_key": "CHANGE-THIS-SECRET-KEY-IN-PRODUCTION",
    "debug": false,
    "host": "0.0.0.0",
    "port": 5000
  },
  "application": {
    "image_directory": "static/images",
    "max_concurrent_images": 10,
    "preload_buffer_size": 5,
    "animation_fps": 30,
    "pattern_seed": "auto",
    "initial_pattern_code": null,
    "enable_caching": true,
    "cache_max_age": 3600,
    "lazy_loading": true
  },
  "animation_timing": {
    "fade_in_min_sec": 2.0,
    "fade_in_max_sec": 4.0,
    "fade_out_min_sec": 3.0,
    "fade_out_max_sec": 6.0,
    "min_hold_time_sec": 5.0,
    "max_hold_time_sec": 15.0,
    "layer_spawn_interval_sec": 4.0
  },
  "layer_management": {
    "max_concurrent_layers": 3,
    "max_opacity": 0.7,
    "min_opacity": 0.5
  },
  "transformations": {
    "rotation": {
      "enabled": true,
      "min_degrees": -15,
      "max_degrees": 15
    },
    "scale": {
      "enabled": true,
      "min_factor": 0.8,
      "max_factor": 1.2
    },
    "translation": {
      "enabled": true,
      "layout_mode": "rule_of_thirds",
      "minimum_visible_percent": 60,
      "rule_of_thirds": {
        "max_horizontal_deviation_percent": 10,
        "max_vertical_deviation_percent": 10
      },
      "rule_of_thirds_and_centre": {
        "max_horizontal_deviation_percent": 10,
        "max_vertical_deviation_percent": 10
      },
      "random": {
        "respect_matte_border": true,
        "distribution_method": "uniform"
      }
    },
    "best_fit_scaling": {
      "enabled": true
    }
  },
  "color_remapping": {
    "enabled": true,
    "probability": 0.5,
    "hue_shift_range": {
      "min_degrees": 0,
      "max_degrees": 360
    }
  },
  "performance": {
    "animation_quality": "high",
    "preload_transform_cache": true
  },
  "audio": {
    "enabled": true,
    "file_path": "static/audio/Ethereal Strokes Loop.mp3",
    "volume": 0.7,
    "loop": true,
    "autoplay": false
  },
  "matte_border": {
    "enabled": true,
    "border_percent": 15,
    "color": "#F0F0F0",
    "style": "classic",
    "image_area": {
      "aspect_ratio": "1:1"
    }
  },
  "environments": {
    "development": {
      "flask": {
        "debug": true,
        "host": "127.0.0.1"
      }
    },
    "production": {
      "flask": {
        "debug": false,
        "host": "0.0.0.0"
      }
    },
    "raspberry_pi": {
      "flask": {
        "debug": false,
        "host": "0.0.0.0"
      },
      "application": {
        "max_concurrent_images": 8,
        "preload_buffer_size": 3,
        "animation_fps": 24
      },
      "layer_management": {
        "max_concurrent_layers": 2
      },
      "animation_timing": {
        "fade_in_min_sec": 2.5,
        "fade_in_max_sec": 4.5,
        "fade_out_min_sec": 3.5,
        "fade_out_max_sec": 5.5
      },
      "performance": {
        "animation_quality": "medium"
      }
    }
  }
}